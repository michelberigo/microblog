<!DOCTYPE html>
<html>
  <head>
    <title>MicroBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/navbar" %>

    <div class="content">
      <div class="main">
        <div class="container">
          <%= yield %>
        </div>
      </div>

      <%= render "shared/sidebar" %>
    </div>

  </body>
</html>
