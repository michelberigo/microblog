<h2>Criar conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-margin", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control form-control-margin", placeholder: "Username" %>
  </div>

  <div class="field">
    <%= f.label :imagem_de_perfil %>
    <br>
    <%= f.file_field :image, class: "btn btn-info form-control-margin" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-margin", placeholder: "Senha com #{@minimum_password_length} caracteres ou mais" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-margin", placeholder: "Confirme a senha" %>
  </div>

  <div class="actions">
    <%= f.submit("Criar conta", class: 'btn btn-success btn-margin') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
