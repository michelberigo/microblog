<h3>
  <%= @title %>
</h3>

<% if @users.any? %>
  <% @users.in_groups_of(3, false).each do |group| %>
    <div class="row">
      <% group.each do |user| %>
        <div class="user-card">
            <%= link_to user, class: "card-link" do %>
              <h3 class="card-title">
                  <%= user.username %>
              </h3>
          <% end %>
        </div>
        <% end %>
      </div>
  <% end %>
<% end %>

